{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "restrictResetPasswordTokenScope": true,
  "emailVerificationRequired": false,
  "hidden": [
    "emailVerified",
    "realm",
    "username"
  ],
  "scope": {
    "include": [
      "profile"
    ]
  },
  "properties": {},
  "validations": [],
  "relations": {
    "polls": {
      "type": "hasMany",
      "model": "poll",
      "foreignKey": "userId"
    },
    "comments": {
      "type": "hasMany",
      "model": "comment",
      "foreignKey": "userId"
    },
    "votes": {
      "type": "hasMany",
      "model": "vote",
      "foreignKey": "userId"
    },
    "profile": {
      "type": "hasOne",
      "model": "profile",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__profile"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__update__profile"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "stats"
    }
  ],
  "methods": {
    "stats": {
      "accepts": [
        {
          "arg": "id",
          "type": "string",
          "required": true,
          "description": "user id",
          "http": {
            "source": "path"
          }
        }
      ],
      "returns": [
        {
          "arg": "stats",
          "type": "object",
          "root": true,
          "description": "user stats"
        }
      ],
      "description": "Gets user stats",
      "http": [
        {
          "path": "/:id/stats",
          "verb": "get"
        }
      ]
    }
  }
}
