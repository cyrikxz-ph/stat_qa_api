{
  "name": "poll",
  "base": "PersistedModel",
  "idInjection": true,
  "indexes": {
    "isOpen_index": {
      "keys": {
        "isOpen": 1
      }
    },
    "userId_index": {
      "keys": {
        "userId": 1
      }
    }
  },
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "required": false,
      "validateUpsert": true,
      "silenceWarnings": false
    }
  },
  "scope": {
    "include": [
      "user"
    ]
  },
  "properties": {
    "question": {
      "type": "string",
      "required": true,
      "length": 256
    },
    "isOpen": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "openTime": {
      "type": "number",
      "required": true,
      "default": 86400
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": ""
    },
    "specialization": {
      "type": "belongsTo",
      "model": "specialization",
      "foreignKey": ""
    },
    "options": {
      "type": "hasMany",
      "model": "option",
      "foreignKey": "",
      "options": {
        "validate": true,
        "persistent": true,
        "forceId": false
      }
    },
    "comments": {
      "type": "hasMany",
      "model": "comment",
      "foreignKey": ""
    },
    "votes": {
      "type": "hasMany",
      "model": "vote",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "open",
        "closed",
        "openCount",
        "closedCount",
        "create",
        "__create__comments",
        "__create__votes"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": [
        "prototype.close",
        "__updateById__comments",
        "__destroyById__comments"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "close"
    }
  ],
  "methods": {
    "open": {
      "accepts": [],
      "returns": {
        "arg": "data",
        "type": "poll",
        "root": true
      },
      "description": "Find all instance of poll that are still open",
      "http": [
        {
          "path": "/open",
          "verb": "get",
          "status": 200
        }
      ]
    },
    "openCount": {
      "accepts": [],
      "returns": {
        "arg": "count",
        "type": "number"
      },
      "description": "Count all instance of poll that are still open",
      "http": [
        {
          "path": "/open/count",
          "verb": "get",
          "status": 200
        }
      ]
    },
    "closed": {
      "accepts": [],
      "returns": {
        "arg": "data",
        "type": "poll",
        "root": true
      },
      "description": "Find all instance of poll that are already closed",
      "http": [
        {
          "path": "/closed",
          "verb": "get",
          "status": 200
        }
      ]
    },
    "closedCount": {
      "accepts": [],
      "returns": {
        "arg": "count",
        "type": "number"
      },
      "description": "Count all instance of poll that are already closed",
      "http": [
        {
          "path": "/closed/count",
          "verb": "get",
          "status": 200
        }
      ]
    },
    "close": {
      "accepts": [
        {
          "arg": "id",
          "type": "number",
          "required": true,
          "description": "poll id",
          "http": {
            "source": "path"
          }
        },
        {
          "arg": "options",
          "type": "object",
          "http": "optionsFromRequest"
        }
      ],
      "returns": [],
      "description": "close an open poll",
      "http": [
        {
          "path": "/:id/close",
          "verb": "post"
        }
      ]
    }
  }
}
