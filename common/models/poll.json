{
  "name": "poll",
  "base": "PersistedModel",
  "idInjection": true,
  "indexes": {
    "isOpen_index": {
      "keys": {
        "isOpen": 1
      }
    },
    "userId_index": {
      "keys": {
        "userId": 1
      }
    }
  },
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "required": false,
      "validateUpsert": true,
      "silenceWarnings": false
    }
  },
  "scope": {
    "include": [
      "user"
    ]
  },
  "properties": {
    "question": {
      "type": "string",
      "required": true,
      "length": 256
    },
    "isOpen": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "openTime": {
      "type": "number",
      "required": true,
      "default": 86400
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": ""
    },
    "specialization": {
      "type": "belongsTo",
      "model": "specialization",
      "foreignKey": ""
    },
    "options": {
      "type": "hasMany",
      "model": "option",
      "foreignKey": "",
      "options": {
        "validate": true,
        "persistent": true,
        "forceId": false
      }
    },
    "comments": {
      "type": "hasMany",
      "model": "comment",
      "foreignKey": ""
    },
    "votes": {
      "type": "hasMany",
      "model": "vote",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "open",
        "closed",
        "openCount",
        "closedCount",
        "create",
        "__create__comments",
        "__create__votes",
        "voteDetails"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": [
        "prototype.close",
        "__updateById__comments",
        "__destroyById__comments"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "expireOpenPolls"
    }
  ],
  "methods": {
    "expireOpenPolls": {
      "accepts": [],
      "returns": {
        "arg": "pollIds",
        "type": "[number]"
      },
      "description": "Expire open polls that are beyond open time",
      "http": [
        {
          "path": "/expire",
          "verb": "get",
          "status": 200
        }
      ]
    },
    "prototype.voteDetails": {
      "accepts": [],
      "returns": {
        "arg": "data",
        "type": "Object",
        "root": true
      },
      "description": "Fetch polls vote details",
      "http": [
        {
          "path": "/votes/details",
          "verb": "get",
          "status": 200
        }
      ]
    }
  }
}
