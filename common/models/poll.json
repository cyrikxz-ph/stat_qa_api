{
  "name": "poll",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "required": false,
      "validateUpsert": true,
      "silenceWarnings": false
    }
  },
  "scope": {},
  "properties": {
    "question": {
      "type": "string",
      "required": true,
      "length": 256
    },
    "isOpen": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "openTime": {
      "type": "number",
      "required": true,
      "default": 86400
    }
  },
  "indexes": {
    "userId_index": {
      "keys": {
        "userId": 1
      }
    },
    "isOpen_index": {
      "keys": {
        "isOpen": 1
      }
    }
  },
  "validations": [],
  "relations": {
    "options": {
      "type": "hasMany",
      "model": "option",
      "foreignKey": "",
      "options": {
        "validate": true,
        "persistent": true,
        "forceId": false
      }
    },
    "comments": {
      "type": "hasMany",
      "model": "comment",
      "foreignKey": ""
    },
    "votes": {
      "type": "hasMany",
      "model": "vote",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "open",
        "closed",
        "openCount",
        "closedCount",
        "create",
        "__create__comments",
        "__create__votes"
      ]
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": [
        "__updateById__comments",
        "__destroyById__comments"
      ]
    }
  ],
  "methods": {
    "open": {
      "accepts": [],
      "returns": {
        "arg": "data",
        "type": "poll",
        "root": true
      },
      "description": "Find all instance of poll that are still open",
      "http": [
        {
          "path": "/open",
          "verb": "get",
          "status": 200
        }
      ]
    },
    "openCount": {
      "accepts": [],
      "returns": {
        "arg": "count",
        "type": "number"
      },
      "description": "Count all instance of poll that are still open",
      "http": [
        {
          "path": "/open/count",
          "verb": "get",
          "status": 200
        }
      ]
    },
    "closed": {
      "accepts": [],
      "returns": {
        "arg": "data",
        "type": "poll",
        "root": true
      },
      "description": "Find all instance of poll that are already closed",
      "http": [
        {
          "path": "/closed",
          "verb": "get",
          "status": 200
        }
      ]
    },
    "closedCount": {
      "accepts": [],
      "returns": {
        "arg": "count",
        "type": "number"
      },
      "description": "Count all instance of poll that are already closed",
      "http": [
        {
          "path": "/closed/count",
          "verb": "get",
          "status": 200
        }
      ]
    }
  }
}
